# =============================================================================
# Development Environment Variables
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Project Metadata
# -----------------------------------------------------------------------------
project_name = "nomas"
environment  = "dev"

# -----------------------------------------------------------------------------
# REQUIRED: Secrets & Authentication
# -----------------------------------------------------------------------------

# DigitalOcean API Token
# Get yours from: https://cloud.digitalocean.com/account/api/tokens
do_token = "dop_v1_xxx..."

# SSH Authentication
ssh_password     = "YOUR_SSH_PASSWORD"
ssh_user         = "root"
ssh_private_key  = ""
ssh_keys         = []

# Email for Let's Encrypt SSL certificates
app_email = "your-email@example.com"

# -----------------------------------------------------------------------------
# VPS Configuration
# -----------------------------------------------------------------------------
region        = "sgp1"
size          = "s-1vcpu-1gb"  # Smaller size for dev
image         = "ubuntu-22-04-x64"
droplet_tags  = ["terraform-managed", "docker-stack", "dev"]

# -----------------------------------------------------------------------------
# Docker Stack Configuration
# -----------------------------------------------------------------------------
# Available stacks: "mongodb", "redis-cifarm", "kafka-cifarm", "arcane", "grafana-loki-prometheus"
stacks = ["mongodb"]

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
apps = []  # Add apps with domains for dev, e.g., [{domain = "dev.example.com", port = 3000}]

# -----------------------------------------------------------------------------
# SSL/HTTPS Configuration
# -----------------------------------------------------------------------------
enable_https        = true
use_cloudflare_cert = false

# -----------------------------------------------------------------------------
# Cloudflare Configuration (Optional)
# -----------------------------------------------------------------------------
cloudflare_api_token    = ""
cloudflare_zone_id      = ""
cloudflare_proxied      = true
cloudflare_origin_cert  = ""
cloudflare_origin_key   = ""

# -----------------------------------------------------------------------------
# Database Credentials
# -----------------------------------------------------------------------------
# Generate strong passwords using: openssl rand -base64 32
mongodb_root_password     = "CHANGE_ME_dev_mongo_password"
mongodb_replica_set_key   = "CHANGE_ME_dev_replica_key"
redis_password            = "CHANGE_ME_dev_redis_password"
kafka_client_passwords    = "CHANGE_ME_dev_kafka_password"

# -----------------------------------------------------------------------------
# Arcane Credentials
# -----------------------------------------------------------------------------
arcane_encryption_key     = "CHANGE_ME_dev_arcane_encryption_key"
arcane_jwt_secret         = "CHANGE_ME_dev_arcane_jwt_secret"

# -----------------------------------------------------------------------------
# Grafana Credentials
# -----------------------------------------------------------------------------
grafana_admin_user        = "admin"
grafana_admin_password    = "CHANGE_ME_dev_grafana_password"
grafana_root_url          = ""  # Set to https://grafana.example.com when using custom domain

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
backend_network_name      = "backend-net"  # Docker network for cross-stack communication
